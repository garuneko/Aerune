{
  "name": "aerune",
  "version": "1.0.0",
  "description": "Bluesky Client Aerune",
  "main": "main.js",
  "author": "Mitsuki Hamada",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder"
  },
  "dependencies": {
    "@atproto/api": "^0.13.20"
  },
  "devDependencies": {
    "electron": "^34.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.garuneko.aerune",
    "productName": "Aerune",
    "directories": {
      "output": "dist"
    },
    "mac": {
  "category": "public.app-category.utilities",
  "target": ["dmg", "zip"],
  "identity": null,
  "type": "distribution",
  "hardenedRuntime": false,
  "gatekeeperAssess": false,
  "sign": false
},
"win": {
  "target": "nsis"
},
"linux": {
  "target": "AppImage"
}
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
