{
  "name": "aerune",
  "version": "1.0.0",
  "description": "Bluesky Client Aerune",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder" 
  },
  "dependencies": {
    "@atproto/api": "^0.13.20"
  },
  "devDependencies": {
    "electron": "^34.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.garuneko.aerune",
    "productName": "Aerune",
    "copyright": "Copyright Â© 2026 garuneko",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg",
      "identity": null
    },
    "linux": {
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
